---
/**
 * Baselayout that should be wrapped for TakeMe Links
 */
import "@styles/index.css";

export interface Props {
  title: string;
  uid: string;
}

const prod = import.meta.env.PROD;
const { title, uid } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Iconify script -->
    <script
      src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.1/dist/iconify-icon.min.js"
    ></script>
  </head>
  <body class="small-scrollbar overflow-auto flex flex-col h-screen">
    <slot />
    <style is:global></style>
    <script type="module" define:vars={{ uid, prod }}>
      import { AnalyticTracker } from "../../node_modules/analytic-tracker/dist/index";

      window.AnalyticTracker = new AnalyticTracker(
        "takeme-blog",
        uid,
        prod ? "https://api.takeme.blog/" : "http://localhost:5080"
      );
    </script>
  </body>
</html>
