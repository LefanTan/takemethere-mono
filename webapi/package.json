{
  "name": "webapi",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "start:emulator": "firebase emulators:start --export-on-exit=./auth-data",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register ./src/index.ts",
    "build": "esbuild ./src/index.ts --platform=node --bundle --outfile=./dist/index.js --external:./node_modules/*",
    "start": "node ./dist/index.js --no-daemon",
    "test": "echo \"Error: no test specified\" && exit 1",
    "migrate": "npx prisma migrate dev && npm run generate",
    "apply-migration": "npx prisma migrate deploy",
    "codegen": "node ./src/swagger.js && openapi --input ./swagger-output.json --output ../common/webapi/",
    "generate": "npx prisma generate && npx @kalissaac/prisma-typegen ../common/types ./prisma/schema.prisma --useType --generateInsertionTypes && npm run codegen"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^6.14.2",
    "firebase-admin": "^11.2.0",
    "swagger-ui-express": "^4.5.0"
  },
  "devDependencies": {
    "@kalissaac/prisma-typegen": "^0.0.7",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.0",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "cross-env": "^7.0.3",
    "esbuild": "^0.15.12",
    "nodemon": "^2.0.20",
    "openapi-typescript-codegen": "^0.23.0",
    "prisma": "^4.5.0",
    "swagger-autogen": "^2.22.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  }
}
