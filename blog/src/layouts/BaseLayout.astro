---
/**
 * Baselayout that should be wrapped for TakeMe Links
 */
import "@styles/index.css";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    {title && <title>{title}</title>}

    <slot name="head" />

    <!-- Iconify script -->
    <script
      src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.1/dist/iconify-icon.min.js"
    ></script>
  </head>
  <body class="small-scrollbar overflow-auto flex flex-col h-screen">
    <slot />
    <style is:global></style>
    <slot name="append" />
    <script>
      import "../scripts/tracker";
    </script>
  </body>
</html>
