---
import "@styles/index.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Iconify script -->
    <script
      src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.1/dist/iconify-icon.min.js"
    ></script>
    <script>
      import { AnalyticTracker } from "@common/analytic-tracker/src/index";

      window.AnalyticTracker = new AnalyticTracker(
        "takeme-blog",
        import.meta.env.PROD
          ? "https://api.takeme.blog/"
          : "http://localhost:5080"
      );
    </script>
  </head>
  <body class="small-scrollbar overflow-auto flex flex-col h-screen">
    <slot />
    <style is:global></style>
  </body>
</html>
