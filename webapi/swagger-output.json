{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "TakeMe",
    "description": "API documentation for TakeMe API"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/users/email/{username}": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Retrieve email based on a given username",
        "description": "",
        "parameters": [
          {
            "name": "username",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "lefan@gmail.com"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/users/create": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Create a new user. Returns 404 if user already exists",
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string",
                  "example": "lefanTan"
                },
                "email": {
                  "type": "string",
                  "example": "lefantan@lol.com"
                },
                "password": {
                  "type": "string",
                  "example": "veryNicePassword"
                }
              },
              "required": [
                "username",
                "email"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns a user",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "example": "adfn123nasdfnj1j129"
                },
                "email": {
                  "type": "string",
                  "example": "lefan@gmail.com"
                },
                "username": {
                  "type": "string",
                  "example": "lefan"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/users/allEntries": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Grab all the page entries created by user, sorted by updatedAt",
        "description": "",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Returns a list of PageEntry"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  }
}