{
  "name": "webapi",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon ./src/index.ts",
    "build": "tsc -p .",
    "start": "NODE_ENV=production npm run apply-migration && pm2 start ./dist/index.js --no-daemon",
    "test": "echo \"Error: no test specified\" && exit 1",
    "migrate": "npx prisma migrate dev && npm run generate",
    "apply-migration": "npx prisma migrate deploy",
    "generate": "npx prisma generate && npx @kalissaac/prisma-typegen ../common/types ./prisma/schema.prisma --useType --generateInsertionTypes"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.5.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@kalissaac/prisma-typegen": "^0.0.7",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.0",
    "nodemon": "^2.0.20",
    "pm2": "^5.2.2",
    "prisma": "^4.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
